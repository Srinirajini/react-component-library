{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "lib":[
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "target": "es5",
    "sourceMap": true,
    "jsx": "react-jsx",
  },
  "include": ["./src","typings","**/*.ts","**/*.tsx"],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}